{
  "version": 2,
  "functions": {
    "api/chat.js": {
      "maxDuration": 30
    },
    "api/tts.js": {
      "maxDuration": 30
    },
    "api/log.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/ask", "destination": "/ask.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://giovannieverduin.com" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
